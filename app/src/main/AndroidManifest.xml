<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.nationalfreedays" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ui.FreeDaysActivity"
            android:label="@string/title_activity_free_days"
            android:parentActivityName="ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MainActivity" />
        </activity>
        <activity
            android:name="ui.FreeDaysActivity$NoteActivity"
            android:label="@string/title_activity_note"
            android:parentActivityName="ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MainActivity" />
        </activity>

        <meta-data
            android:name="AA_DB_NAME"
            android:value="Freeday.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />

        <activity
            android:name="ui.NoteActivity"
            android:label="@string/title_activity_note"
            android:parentActivityName="ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MainActivity" />
        </activity>
        <activity
            android:name="ui.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName="ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MainActivity" />
        </activity>
        <activity
            android:name="ui.CategoryActivity"
            android:label="@string/title_activity_category"
            android:parentActivityName="ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MainActivity" />
        </activity>
    </application>

</manifest>
